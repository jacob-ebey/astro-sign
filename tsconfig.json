{
  "compilerOptions": {
    "moduleResolution": "Node",
    "lib": ["es2020", "DOM"],
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "forgo",
    "types": [
      "svelte",
      "svelte/store",
      "svelte/motion",
      "svelte/transition",
      "svelte/animate",
      "svelte/easing"
    ]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
